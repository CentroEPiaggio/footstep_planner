<launch>	
	<!-- the plane detector -->
	<node pkg="plane_segmentation" name="curvature_filter" type="curvature_filter_node" respawn="true" output="screen" cwd="node">
		<!--topic remapping-->
		<!-- <remap from="input_cloud" to="/camera/depth_registered/points" /> -->
		<param name="voxel_size" value="0.01" />
		<param name="normal_radius" value="0.1" />
		<param name="curvature_threshold" value="0.05" />
		<param name="min_cluster_size" value="50" /> <!-- with 0.01 in voxel size, 50 seems reasonable to place a foot -->
		<param name="cluster_tolerance" value="0.05" />
	</node>
</launch>